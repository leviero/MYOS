<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.myos.myos.Customization"
    android:weightSum="1"
    android:background="#ffffffff">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Customize!"
        android:id="@+id/textView8"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:textSize="36dp"
        android:textIsSelectable="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="310dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:weightSum="1"
            android:id="@+id/linearLayout">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/imageView4"
                android:src="@drawable/barber_symbol" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/imageView5"
                android:src="@drawable/scissor" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/imageView6"
                android:src="@drawable/comb" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/imageView7"
                android:src="@drawable/moustache" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/imageView8"
                android:src="@drawable/shave" />

        </LinearLayout>

        <ImageView
            android:layout_width="230dp"
            android:layout_height="300dp"
            android:id="@+id/userPicture"
            android:src="@drawable/aa"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="60dp"
            android:layout_height="fill_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/imageView9"
                android:src="@drawable/dye" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/imageView10"
                android:src="@drawable/spray" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/imageView11"
                android:src="@drawable/razor" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/imageView12"
                android:src="@drawable/cut" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/imageView13"
                android:src="@drawable/brush" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="178dp"
        android:layout_height="82dp"
        android:text="Proceed"
        android:id="@+id/button"
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="32dp" />

</LinearLayout>
